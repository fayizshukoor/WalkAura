<div class="min-h-screen bg-black flex items-center justify-center p-4 pt-12">
  <div class="w-full max-w-md bg-[#161616] border border-gray-800 rounded-2xl shadow-2xl p-8 text-center">
    
    <h1 class="text-2xl font-bold text-white mb-2">Forgot Password?</h1>
    <p class="text-gray-400 text-sm mb-8 leading-relaxed">
      Enter your email address and we'll send you an OTP to reset your password.
    </p>

    <%- include('../partials/alerts') %>
    
    <form class="space-y-6 text-left" id="forgotForm" action="/forgot-password" method="POST" novalidate>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-400 mb-2">Email Address</label>
        
        <input 
          type="email" 
          id="email" 
          name="email"
          class="w-full px-4 py-3 bg-[#1e1e1e] border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:border-transparent text-white placeholder-gray-600 transition-all text-base"
          placeholder="name@example.com"
        >
        
        <p id="empty-error" class="text-xs text-red-500 hidden mt-2 flex items-center gap-1.5">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
          <span>Email is required.</span>
        </p>
      </div>

      <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-4 rounded-lg transition-all duration-200 shadow-[0_4px_14px_0_rgba(79,70,229,0.3)] hover:-translate-y-0.5">
        Send OTP
      </button>

      <div class="mt-8 p-5 rounded-xl bg-indigo-500/5 border border-indigo-500/20">
        <div class="flex gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-400 shrink-0">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <p class="text-sm text-gray-300 leading-relaxed text-left">
            <span class="text-indigo-400 font-bold">Google Account?</span> If you created your account using Google. Please 
            <a href="/login" class="text-indigo-400 hover:text-indigo-300 underline font-bold transition-colors">Log in with Google</a>.
            Password reset is only available for email-and-password accounts.
          </p>
        </div>
      </div>
    </form>

    <div class="mt-8">
      <a href="/login" class="text-sm text-gray-500 hover:text-white transition-colors inline-flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to Login
      </a>
    </div>
  </div>
</div>

<script>
  // 1. Select Elements
  const form = document.getElementById('forgotForm');
  const emailInput = document.getElementById('email');
  const emptyError = document.getElementById('empty-error');

  // 2. Helper Functions (Unique names to avoid conflict with partials)
  const showEmptyError = () => {
    emptyError.classList.remove('hidden');
    emailInput.classList.add('border-red-500', 'focus:ring-red-500');
    emailInput.classList.remove('border-gray-700', 'focus:ring-indigo-600');
  };

  const clearEmptyError = () => {
    emptyError.classList.add('hidden');
    emailInput.classList.remove('border-red-500', 'focus:ring-red-500');
    emailInput.classList.add('border-gray-700', 'focus:ring-indigo-600');
  };

  // 3. Submit Validation (Only checks if empty)
  form.addEventListener('submit', (e) => {
    const emailValue = emailInput.value.trim();

    if (emailValue === "") {
      e.preventDefault(); // Stop submission
      showEmptyError();
    }
    // If not empty, let it submit -> Backend handles Regex
  });

  // 4. Clear error when user starts typing
  emailInput.addEventListener('input', () => {
    if (!emptyError.classList.contains('hidden')) {
      clearEmptyError();
    }
  });
</script>