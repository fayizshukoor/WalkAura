<form action="<%= actionUrl || '/verify-otp' %>" method="post" id="otpForm">

<main class="flex min-h-screen items-center justify-center px-4">

  <div class="relative w-full max-w-md rounded-2xl bg-[#0b0c10]
              border border-primary/40
              shadow-[0_0_40px_rgba(79,70,229,0.18)]
              p-8 text-center">

    <div class="absolute inset-x-0 top-0 h-[2px]
                bg-gradient-to-r from-transparent via-primary to-transparent">
    </div>

    <h2 class="text-3xl font-bold text-white mb-2">
      <%= (typeof title !== "undefined")? title : "Verify Your Email" %>
    </h2>

    <p class="text-gray-400 mb-6">
       <%= (typeof subtitle !== "undefined")? subtitle : "Enter the 6-digit code sent to your email address." %>
    </p>

    <div
      id="otpSuccess" 
      class="mb-4 text-sm text-green-400 bg-green-500/10
             border border-green-500/20 rounded-lg px-4 py-3
             <%= (typeof successMessage !== 'undefined' && successMessage) ? '' : 'hidden' %>">
      <%= (typeof success !== 'undefined' && success) ? success : '' %>
    </div>

    <div
      id="otpError" 
      class="mb-4 text-sm text-red-400 bg-red-500/10
             border border-red-500/20 rounded-lg px-4 py-3
             <%= (typeof error !== 'undefined' && error.length > 0) ? '' : 'hidden' %>">
      <%= (typeof error !== 'undefined' && error.length > 0) ? error[0] : '' %>
    </div>

    <input type="hidden" name="otp" id="finalOtp">

    <div class="flex justify-center gap-3 mb-6">
      <input class="otp-input" type="text" inputmode="numeric" autocomplete="one-time-code" />
      <input class="otp-input" type="text" inputmode="numeric" />
      <input class="otp-input" type="text" inputmode="numeric" />
      <input class="otp-input" type="text" inputmode="numeric" />
      <input class="otp-input" type="text" inputmode="numeric" />
      <input class="otp-input" type="text" inputmode="numeric" />
    </div>

    <button
      type="submit"
      class="w-full h-12 rounded-lg bg-primary
             text-white font-bold text-base
             hover:bg-primary/90 transition-all mb-4">
      Verify Email
    </button>

    <p id="timerText" class="text-sm text-gray-400 mb-1">
      <span id="timerWrapper">
        Resend OTP in <span id="timer" class="text-primary font-semibold">30</span>s
      </span>

      <span id="resendMessage" class="hidden">
        Didnâ€™t receive the code?
      </span>
    </p>

    <button
      type="button"
      id="resendBtn"
      class="mt-2 text-sm font-semibold text-primary opacity-40 cursor-not-allowed"
      disabled
      onclick="resendOTP()">
      Resend OTP
    </button>

  </div>
</main>

</form>

<style>
  .otp-input {
    width: 3.5rem;
    height: 3.5rem;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
    border-radius: 0.75rem;
    background-color: #0d0d0d;
    border: 1px solid #3a3a3a;
    color: white;
    outline: none;
    -moz-appearance: textfield;
  }
  
  .otp-input::-webkit-outer-spin-button,
  .otp-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .otp-input:focus {
    border-color: #4f46e5;
    box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.4);
  }
</style>

<script>
/* ---------------- SHARED ELEMENTS ---------------- */
const otpInputs = document.querySelectorAll(".otp-input");
const otpForm = document.getElementById("otpForm");
const finalOtpInput = document.getElementById("finalOtp");

const resendBtn = document.getElementById("resendBtn");
const timerEl = document.getElementById("timer");
const timerText = document.getElementById("timerText");

// MESSAGE BOXES
const errorBox = document.getElementById("otpError");
const successBox = document.getElementById("otpSuccess");

/* ---------------- AUTO-HIDE LOGIC (NEW) ---------------- */
let messageHideTimeout; // Variable to track the timer

function startMessageHideTimer() {
  // 1. Clear any existing timer to prevent conflicts
  clearTimeout(messageHideTimeout);

  // 2. Set a new timer to hide everything after 5 seconds (5000ms)
  messageHideTimeout = setTimeout(() => {
    clearAllMessages();
  }, 5000); 
}

/* ---------------- HELPER FUNCTIONS ---------------- */
function showError(msg) {
  if (successBox) successBox.classList.add("hidden"); 
  if (errorBox) {
    errorBox.textContent = msg;
    errorBox.classList.remove("hidden");
    
    // Start the 5-second countdown
    startMessageHideTimer();
  }
}

function showSuccess(msg) {
  if (errorBox) errorBox.classList.add("hidden");
  if (successBox) {
    successBox.textContent = msg;
    successBox.classList.remove("hidden");
    
    // Start the 5-second countdown
    startMessageHideTimer();
  }
}

function clearAllMessages() {
  if (errorBox) errorBox.classList.add("hidden");
  if (successBox) successBox.classList.add("hidden");
}

/* ---------------- CHECK ON PAGE LOAD ---------------- */
// This handles Flash messages sent from the Backend (EJS)
// If the page loads and an error/success is already visible, start the timer.
if (
  (errorBox && !errorBox.classList.contains('hidden')) || 
  (successBox && !successBox.classList.contains('hidden'))
) {
  startMessageHideTimer();
}

/* ---------------- OTP INPUT UX ---------------- */
otpInputs.forEach((input, index) => {
  input.addEventListener("input", (e) => {
    const val = e.target.value.replace(/\D/g, "");

    // Clear messages immediately when user starts typing
    clearAllMessages();
    clearTimeout(messageHideTimeout); // Also stop the timer

    if (!val) {
      input.value = "";
      return;
    }

    if (val.length === 1) {
      input.value = val;
      if (index < otpInputs.length - 1) {
        otpInputs[index + 1].focus();
      }
    }
    else if (val.length > 1) {
      input.value = val[0];
      const remaining = val.slice(1);
      remaining.split("").forEach((char, i) => {
        const nextIdx = index + 1 + i;
        if (otpInputs[nextIdx]) {
          otpInputs[nextIdx].value = char;
          otpInputs[nextIdx].focus();
        }
      });
    }
  });

  input.addEventListener("keydown", (e) => {
    if (e.key === "Backspace" && !e.target.value && index > 0) {
      otpInputs[index - 1].focus();
    }
    if (e.key === "ArrowLeft" && index > 0) {
      otpInputs[index - 1].focus();
    }
    if (e.key === "ArrowRight" && index < otpInputs.length - 1) {
      otpInputs[index + 1].focus();
    }
  });

  input.addEventListener("paste", (e) => {
    e.preventDefault();
    const data = e.clipboardData.getData("text").replace(/\D/g, "");
    data.split("").forEach((char, i) => {
      const nextIdx = index + i;
      if (otpInputs[nextIdx]) {
        otpInputs[nextIdx].value = char;
        if (i === data.length - 1 || nextIdx === otpInputs.length - 1) {
            otpInputs[nextIdx].focus();
        }
      }
    });
  });
});

/* ---------------- FORM SUBMIT ---------------- */
otpForm.addEventListener("submit", (e) => {
  let code = "";
  otpInputs.forEach(input => code += input.value);
  finalOtpInput.value = code;

  if (code.length < 6) {
    e.preventDefault();
    showError("Please enter the full 6-digit code");
  }
});


/* ---------------- TIMER LOGIC ---------------- */
let countdownInterval = null;
const TIMER_DURATION = 30;
const STORAGE_KEY = "otp_target_time";

function startTimer(seconds, isNew = true) {
  clearInterval(countdownInterval);
  const timerWrapper = document.getElementById("timerWrapper");
  const resendMessage = document.getElementById("resendMessage");
  const timerEl = document.getElementById("timer");
  const now = Date.now();
  let targetTime;

  if (isNew) {
    targetTime = now + (seconds * 1000);
    localStorage.setItem(STORAGE_KEY, targetTime);
  } else {
    const stored = localStorage.getItem(STORAGE_KEY);
    targetTime = stored ? parseInt(stored, 10) : now + (seconds * 1000);
    if(!stored) localStorage.setItem(STORAGE_KEY, targetTime);
  }

  const tick = () => {
    const currentTime = Date.now();
    const secondsLeft = Math.ceil((targetTime - currentTime) / 1000);

    if (secondsLeft <= 0) {
      clearInterval(countdownInterval);
      localStorage.removeItem(STORAGE_KEY);
      timerWrapper.classList.add("hidden");
      resendMessage.classList.remove("hidden");
      resendBtn.disabled = false;
      resendBtn.classList.remove("opacity-40", "cursor-not-allowed");
      resendBtn.classList.add("hover:underline");
      timerEl.textContent = 0;
    } else {
      timerWrapper.classList.remove("hidden");
      resendMessage.classList.add("hidden");
      resendBtn.disabled = true;
      resendBtn.classList.add("opacity-40", "cursor-not-allowed");
      resendBtn.classList.remove("hover:underline");
      timerEl.textContent = secondsLeft;
    }
  };

  tick();
  countdownInterval = setInterval(tick, 1000);
}

const savedTime = localStorage.getItem(STORAGE_KEY);
if (savedTime && parseInt(savedTime, 10) > Date.now()) {
  startTimer(null, false);
} else {
  startTimer(TIMER_DURATION, true);
}

/* ---------------- RESEND OTP (AJAX) ---------------- */
async function resendOTP() {
  try {
    resendBtn.disabled = true;
    resendBtn.classList.add("opacity-40", "cursor-not-allowed");
    resendBtn.classList.remove("hover:underline");
    
    // Clear messages and any running timer
    clearAllMessages();
    clearTimeout(messageHideTimeout);

    const RESEND_URL = "<%= resendUrl || '/resend-otp' %>";
    const res = await fetch(RESEND_URL, { method: "POST" });
    const data = await res.json();

    if (!res.ok) {
      showError(data.message || "Please wait before resending OTP");
      
      const isTimerRunning = localStorage.getItem(STORAGE_KEY) && parseInt(localStorage.getItem(STORAGE_KEY)) > Date.now();
      if (!isTimerRunning) {
          resendBtn.disabled = false;
          resendBtn.classList.remove("opacity-40", "cursor-not-allowed");
      }
      return;
    }

    showSuccess(data.message);
    startTimer(TIMER_DURATION, true);

  } catch (err) {
    console.error(err);
    showError("Something went wrong. Try again.");
    resendBtn.disabled = false;
    resendBtn.classList.remove("opacity-40", "cursor-not-allowed");
  }
}
</script>