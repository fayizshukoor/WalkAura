<form action="/verify-otp" method="post" id="otpForm">

<main class="flex min-h-screen items-center justify-center px-4">

  <!-- OTP CARD -->
  <div class="relative w-full max-w-md rounded-2xl bg-[#0b0c10]
              border border-primary/40
              shadow-[0_0_40px_rgba(79,70,229,0.18)]
              p-8 text-center">

    <!-- Accent line -->
    <div class="absolute inset-x-0 top-0 h-[2px]
                bg-gradient-to-r from-transparent via-primary to-transparent">
    </div>

    <h2 class="text-3xl font-bold text-white mb-2">
      Verify Your Email
    </h2>

    <p class="text-gray-400 mb-6">
      Enter the 6-digit code sent to your email address.
    </p>

    <!-- ✅ SHARED ERROR BOX -->
    <div
      id="otpError"
      class="mb-4 text-sm text-red-400 bg-red-500/10
             border border-red-500/20 rounded-lg px-4 py-3
             <%= typeof error !== 'undefined' && error ? '' : 'hidden' %>">
      <%= typeof error !== 'undefined' ? error : '' %>
    </div>

    <!-- OTP INPUTS -->
    <input type="hidden" name="otp" id="finalOtp">

    <div class="flex justify-center gap-3 mb-6">
      <input class="otp-input" maxlength="1" type="text" inputmode="numeric" />
      <input class="otp-input" maxlength="1" type="text" inputmode="numeric" />
      <input class="otp-input" maxlength="1" type="text" inputmode="numeric" />
      <input class="otp-input" maxlength="1" type="text" inputmode="numeric" />
      <input class="otp-input" maxlength="1" type="text" inputmode="numeric" />
      <input class="otp-input" maxlength="1" type="text" inputmode="numeric" />
    </div>

    <!-- VERIFY BUTTON -->
    <button
      type="submit"
      class="w-full h-12 rounded-lg bg-primary
             text-white font-bold text-base
             hover:bg-primary/90 transition-all mb-4">
      Verify Email
    </button>

    <!-- TIMER + RESEND -->
   <p id="timerText" class="text-sm text-gray-400 mb-1">
  <span id="timerWrapper">
    Resend OTP in <span id="timer" class="text-primary font-semibold">30</span>s
  </span>

  <span id="resendMessage" class="hidden">
    Didn’t receive the code?
  </span>
</p>



    <button
      type="button"
      id="resendBtn"
      class="mt-2 text-sm font-semibold text-primary opacity-40 cursor-not-allowed"
      disabled
      onclick="resendOTP()">
      Resend OTP
    </button>

  </div>
</main>

</form>

<!-- OTP STYLES -->
<style>
  .otp-input {
    width: 3.5rem;
    height: 3.5rem;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
    border-radius: 0.75rem;
    background-color: #0d0d0d;
    border: 1px solid #3a3a3a;
    color: white;
    outline: none;
  }

  .otp-input:focus {
    border-color: #4f46e5;
    box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.4);
  }
</style>

<!-- OTP LOGIC -->
<script>
/* ---------------- SHARED ELEMENTS ---------------- */
const otpInputs = document.querySelectorAll(".otp-input");
const otpForm = document.getElementById("otpForm");
const finalOtpInput = document.getElementById("finalOtp");
const errorBox = document.getElementById("otpError");

const resendBtn = document.getElementById("resendBtn");
const timerEl = document.getElementById("timer");
const timerText = document.getElementById("timerText");

/* ---------------- OTP INPUT UX ---------------- */
otpInputs.forEach((input, index) => {
  input.addEventListener("input", (e) => {
    e.target.value = e.target.value.replace(/\D/g, "").slice(0, 1);

    // clear error when user types again
    if (!errorBox.classList.contains("hidden")) {
      errorBox.classList.add("hidden");
      errorBox.textContent = "";
    }

    if (e.target.value && index < otpInputs.length - 1) {
      otpInputs[index + 1].focus();
    }
  });

  input.addEventListener("keydown", (e) => {
    if (e.key === "Backspace" && !e.target.value && index > 0) {
      otpInputs[index - 1].focus();
    }
  });

  input.addEventListener("paste", (e) => {
    e.preventDefault();
    const data = e.clipboardData.getData("text").replace(/\D/g, "");
    data.split("").forEach((char, i) => {
      if (otpInputs[index + i]) {
        otpInputs[index + i].value = char;
      }
    });
  });
});

/* ---------------- FORM SUBMIT ---------------- */
otpForm.addEventListener("submit", (e) => {
  let code = "";
  otpInputs.forEach(input => code += input.value);
  finalOtpInput.value = code;

  if (code.length < 6) {
    e.preventDefault();
    errorBox.textContent = "Please enter the full 6-digit code";
    errorBox.classList.remove("hidden");
  }
});

/* ---------------- TIMER LOGIC ---------------- */
let timeLeft = 30;
let countdownInterval = null;

function startTimer(seconds) {
  clearInterval(countdownInterval);

  const timerWrapper = document.getElementById("timerWrapper");
  const resendMessage = document.getElementById("resendMessage");

  // reset UI
  timerWrapper.classList.remove("hidden");
  resendMessage.classList.add("hidden");

  resendBtn.disabled = true;
  resendBtn.classList.add("opacity-40", "cursor-not-allowed");
  resendBtn.classList.remove("hover:underline");

  timeLeft = seconds;
  timerEl.textContent = timeLeft;

  countdownInterval = setInterval(() => {
    timeLeft--;
    timerEl.textContent = timeLeft;

    if (timeLeft <= 0) {
      clearInterval(countdownInterval);

      timerWrapper.classList.add("hidden");
      resendMessage.classList.remove("hidden");

      resendBtn.disabled = false;
      resendBtn.classList.remove("opacity-40", "cursor-not-allowed");
      resendBtn.classList.add("hover:underline");
    }
  }, 1000);
}


// start timer on page load
startTimer(30);

/* ---------------- RESEND OTP (AJAX) ---------------- */
async function resendOTP() {
  try {
    resendBtn.disabled = true;
    resendBtn.classList.add("opacity-40", "cursor-not-allowed");
    resendBtn.classList.remove("hover:underline");

    const res = await fetch("/resend-otp", { method: "POST" });
    const data = await res.json();

    if (!res.ok) {
      errorBox.textContent = data.message || "Please wait before resending OTP";
      errorBox.classList.remove("hidden");
      return;
    }

    // restart timer on success
    startTimer(30);

  } catch (err) {
    errorBox.textContent = "Something went wrong. Try again.";
    errorBox.classList.remove("hidden");
  }
}
</script>
