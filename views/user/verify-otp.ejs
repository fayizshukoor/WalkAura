<!-- OTP LOGIC -->
<script>
  /* ---------------- OTP INPUT LOGIC ---------------- */
 const otpInputs = document.querySelectorAll(".otp-input");
const otpForm = document.getElementById("otpForm");
const finalOtpInput = document.getElementById("finalOtp");

// 1. Handle Typing and Backspace (Your existing logic + focus fix)
otpInputs.forEach((input, index) => {
  input.addEventListener("input", (e) => {
    if (e.target.value.length > 1) {
      e.target.value = e.target.value.slice(0, 1); // Prevent extra chars
    }
    if (e.target.value && index < otpInputs.length - 1) {
      otpInputs[index + 1].focus();
    }
  });

  input.addEventListener("keydown", (e) => {
    if (e.key === "Backspace" && !e.target.value && index > 0) {
      otpInputs[index - 1].focus();
    }
  });

  // 2. THE PASTE LOGIC
  input.addEventListener("paste", (e) => {
    e.preventDefault(); // Stop default paste behavior
    const data = e.clipboardData.getData("text").trim();
    
    // Check if pasted data is numeric and roughly the right length
    if (!/^\d+$/.test(data)) return; 

    const characters = data.split("");
    
    characters.forEach((char, i) => {
      if (index + i < otpInputs.length) {
        otpInputs[index + i].value = char;
      }
    });

    // Set focus to the last filled box or the next empty one
    const nextIndex = index + characters.length;
    if (nextIndex < otpInputs.length) {
      otpInputs[nextIndex].focus();
    } else {
      otpInputs[otpInputs.length - 1].focus();
    }
  });
});

// 3. Prepare data for Backend on Submit
otpForm.addEventListener("submit", (e) => {
  let code = "";
  otpInputs.forEach(input => code += input.value);
  finalOtpInput.value = code; // Put the 6 digits into the hidden input

  if (code.length < 6) {
    e.preventDefault();
    alert("Please enter the full 6-digit code");
  }
});

  /* ---------------- TIMER LOGIC ---------------- */
  let timeLeft = 60;
  const timerEl = document.getElementById("timer");
  const resendBtn = document.getElementById("resendBtn");
  const timerText = document.getElementById("timerText");

  const countdown = setInterval(() => {
    timeLeft--;
    timerEl.textContent = timeLeft;

    if (timeLeft <= 0) {
      clearInterval(countdown);
      timerText.textContent = "Didnâ€™t receive the code?";
      resendBtn.disabled = false;
      resendBtn.classList.remove("opacity-40", "cursor-not-allowed");
      resendBtn.classList.add("hover:underline");
    }
  }, 1000);

  /* ---------------- RESEND HANDLER ---------------- */
  function resendOTP() {
    resendBtn.disabled = true;
    resendBtn.classList.add("opacity-40", "cursor-not-allowed");
    resendBtn.classList.remove("hover:underline");

    timeLeft = 60;
    timerEl.textContent = timeLeft;
    timerText.innerHTML = 'Resend OTP in <span id="timer" class="text-primary font-semibold">60</span>s';

    // restart timer
    setInterval(() => {
      timeLeft--;
      document.getElementById("timer").textContent = timeLeft;

      if (timeLeft <= 0) {
        timerText.textContent = "Didnâ€™t receive the code?";
        resendBtn.disabled = false;
        resendBtn.classList.remove("opacity-40", "cursor-not-allowed");
        resendBtn.classList.add("hover:underline");
      }
    }, 1000);

    // ðŸ‘‰ here you will call backend API to resend OTP
    console.log("OTP resent");
  }
</script>
