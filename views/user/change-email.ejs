<div class="min-h-screen bg-black flex items-center justify-center p-4 pt-12">
  <div class="w-full max-w-md bg-[#161616] border border-gray-800 rounded-2xl shadow-2xl p-8 text-center">
    
    <h1 class="text-2xl font-bold text-white mb-2">Change Email</h1>
    <p class="text-gray-400 text-sm mb-8 leading-relaxed">
      Enter your new email address. We will send a 6-digit OTP to verify your new inbox.
    </p>

    <%- include('../partials/alerts') %>
    
    <form class="space-y-6 text-left" id="changeEmailForm" action="/profile/change-email" method="POST" novalidate>
      
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-2">Current Email Address</label>
        <input 
          type="email" 
          value="<%= user.email %>" 
          disabled
          class="w-full px-4 py-3 bg-[#121212] border border-gray-800 rounded-lg text-gray-500 cursor-not-allowed text-base"
        >
      </div>

      <div>
        <label for="newEmail" class="block text-sm font-medium text-gray-400 mb-2">New Email Address</label>
        <input 
          type="email" 
          id="newEmail" 
          name="newEmail"
          class="w-full px-4 py-3 bg-[#1e1e1e] border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:border-transparent text-white placeholder-gray-600 transition-all text-base"
          placeholder="newname@example.com"
        >
        
        <p id="email-error" class="text-xs text-red-500 hidden mt-2 flex items-center gap-1.5">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-5a.75.75 0 01.75.75v4.5a.75.75 0 01-1.5 0v-4.5A.75.75 0 0110 5zm0 10a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
          <span>Email is required.</span>
        </p>
      </div>

      <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-4 rounded-lg transition-all duration-200 shadow-[0_4px_14px_0_rgba(79,70,229,0.3)] hover:-translate-y-0.5">
        Send Verification OTP
      </button>

      <div class="mt-8 p-5 rounded-xl bg-indigo-500/5 border border-indigo-500/20">
        <div class="flex gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-indigo-400 shrink-0">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.744c0 3.89 2.367 7.229 5.765 8.659a12.301 12.301 0 008.47 0c3.398-1.43 5.765-4.77 5.765-8.659a11.99 11.99 0 00-.598-3.744A11.959 11.959 0 0112 2.714z" />
          </svg>
          <p class="text-sm text-gray-300 leading-relaxed text-left">
            <span class="text-indigo-400 font-bold">OTP Verification:</span> A code will be sent to your <span class="text-white">new email</span>. Your profile will update only after the OTP is verified.
          </p>
        </div>
      </div>
    </form>

    <div class="mt-8">
      <a href="/profile" class="text-sm text-gray-500 hover:text-white transition-colors inline-flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to Profile Settings
      </a>
    </div>
  </div>
</div>

<script>
  // 1. Select Elements
  const form = document.getElementById('changeEmailForm');
  const newEmailInput = document.getElementById('newEmail');
  const emailError = document.getElementById('email-error');

  // 2. Helper Functions for UI
  const showEmptyError = () => {
    emailError.classList.remove('hidden');
    // Add Red Border
    newEmailInput.classList.add('border-red-500', 'focus:ring-red-500');
    // Remove Default Gray/Indigo Border
    newEmailInput.classList.remove('border-gray-700', 'focus:ring-indigo-600');
  };

  const clearEmptyError = () => {
    emailError.classList.add('hidden');
    // Remove Red Border
    newEmailInput.classList.remove('border-red-500', 'focus:ring-red-500');
    // Restore Default Gray/Indigo Border
    newEmailInput.classList.add('border-gray-700', 'focus:ring-indigo-600');
  };

  // 3. Submit Listener (Validation)
  form.addEventListener('submit', (e) => {
    const emailValue = newEmailInput.value.trim();

    // Check if Empty ONLY
    if (emailValue === "") {
      e.preventDefault(); // Stop submission
      showEmptyError();
    }
  });

  // 4. Input Listener (Clear error when user types)
  newEmailInput.addEventListener('input', () => {
    if (!emailError.classList.contains('hidden')) {
      clearEmptyError();
    }
  });
</script>