<%- include('../partials/alerts') %>

<form action="/signup" method="post" class="flex flex-col gap-4">
<div class="space-y-1">
<label class="sr-only" for="name">Full Name</label>
<div class="relative">
<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
<span class="material-symbols-outlined text-[20px]">person</span>
</div>
<input class="block w-full h-12 rounded-lg border-0 bg-[#111218] pl-10 pr-4 text-white ring-1 ring-inset ring-[#282c39] placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-primary focus:bg-[#0b0c10] transition-all sm:text-sm sm:leading-6 shadow-sm" name="name" id="name" placeholder="Full Name" type="text"/>
</div>

<p id="nameError" class="text-sm text-red-500 mt-1 hidden"></p>

</div>
<div class="space-y-1">
<label class="sr-only" for="email">Email Address</label>
<div class="relative">
<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
<span class="material-symbols-outlined text-[20px]">mail</span>
</div>
<input class="block w-full h-12 rounded-lg border-0 bg-[#111218] pl-10 pr-4 text-white ring-1 ring-inset ring-[#282c39] placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-primary focus:bg-[#0b0c10] transition-all sm:text-sm sm:leading-6 shadow-sm" name="email" id="email" placeholder="Email Address" type="email"/>
</div>

<p id="emailError" class="text-sm text-red-500 mt-1 hidden"></p>

</div>
<div class="space-y-1">
<label class="sr-only" for="phone">Phone Number</label>
<div class="flex rounded-lg ring-1 ring-inset ring-[#282c39] shadow-sm bg-[#111218] focus-within:ring-2 focus-within:ring-primary overflow-hidden">
<div class="flex select-none items-center pl-3 pr-2 text-gray-400 sm:text-sm border-r border-[#282c39] bg-[#181a25]">
<span class="material-symbols-outlined text-[18px] mr-1">call</span>
<span class="font-medium">+91</span>
</div>
<input class="block flex-1 h-12 border-0 bg-transparent py-1.5 pl-3 text-white placeholder:text-gray-500 focus:ring-0 sm:text-sm sm:leading-6" name="phone" id="phone" name="phone" placeholder="Phone Number" type="tel"/>
</div>

<p id="phoneError" class="text-sm text-red-500 mt-1 hidden"></p>  

</div>

<div class="space-y-1">
<label class="sr-only" for="password">Password</label>
<div class="relative">
<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
<span class="material-symbols-outlined text-[20px]">lock</span>
</div>

<input
  class="block w-full h-12 rounded-lg border-0 bg-[#111218] pl-10 pr-10 text-white ring-1 ring-inset ring-[#282c39] placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-primary focus:bg-[#0b0c10] transition-all sm:text-sm sm:leading-6 shadow-sm"
  name="password"
  id="password"
  placeholder="Password"
  type="password"
/>



<div
  class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-gray-400 hover:text-white"
  onclick="togglePassword('password','eyePassword')"
>
  <span id="eyePassword" class="material-symbols-outlined text-[20px]">
    visibility
  </span>
</div>
</div>

<p id="passwordError" class="text-sm text-red-500 mt-1 hidden"></p>

</div>

<div class="space-y-1">
<label class="sr-only" for="confirm_password">Confirm Password</label>
<div class="relative">
<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
<span class="material-symbols-outlined text-[20px]">lock_reset</span>
</div>

<input
  class="block w-full h-12 rounded-lg border-0 bg-[#111218] pl-10 pr-10 text-white ring-1 ring-inset ring-[#282c39] placeholder:text-gray-500 focus:ring-2 focus:ring-inset focus:ring-primary focus:bg-[#0b0c10] transition-all sm:text-sm sm:leading-6 shadow-sm"
  name="confirm_password"
  id="confirm_password"
  placeholder="Confirm Password"
  type="password"
/>

<div
  class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-gray-400 hover:text-white"
  onclick="togglePassword('confirm_password','eyeConfirm')"
>
  <span id="eyeConfirm" class="material-symbols-outlined text-[20px]">
    visibility
  </span>
</div>
</div>

<p id="confirmPasswordError" class="text-sm text-red-500 mt-1 hidden"></p>

</div>



