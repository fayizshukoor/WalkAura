<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title><%= product.name %> | WalkAura</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet"/>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#4F46E5",
                        "background-dark": "#0B0C10",
                        "surface-dark": "#13151A",
                        "card-dark": "#1F2937",
                        "border-dark": "#374151",
                    },
                    keyframes: {
                        shake: {
                            '0%, 100%': { transform: 'translateX(0)' },
                            '25%': { transform: 'translateX(-5px)' },
                            '75%': { transform: 'translateX(5px)' },
                        }
                    },
                    animation: {
                        shake: 'shake 0.2s ease-in-out 0s 2',
                    }
                }
            }
        };
    </script>
    <style>
        body { font-family: 'Inter', sans-serif; }
        .hide-scrollbar::-webkit-scrollbar { display: none; }
        .zoom-container { cursor: zoom-in; overflow: hidden; position: relative; width: 100%; aspect-ratio: 1 / 1; margin: 0; }
        #mainImage { transition: transform 0.15s ease-out; transform-origin: center center; width: 100%; height: 100%; object-fit: contain; padding: 1rem; }
        .variant-btn:hover { border-color: #4F46E5; }
        .variant-btn.active { border-color: #4F46E5; background: rgba(79, 70, 229, 0.1); }
        .size-btn.disabled { opacity: 0.4; cursor: not-allowed; border-color: #374151 !important; background: transparent !important; color: #6B7280 !important; }
        .size-btn.active { border-color: #000000; background: #4F46E5; color: white; }
        input::-webkit-outer-spin-button, input::-webkit-inner-spin-button { -webkit-appearance: none; margin: 0; }
        input[type=number] { -moz-appearance: textfield; }
    </style>
</head>
<body class="bg-background-dark text-white antialiased">

<main class="pt-24 pb-20 px-6 lg:px-10 max-w-[100%] xl:max-w-[95%] mx-auto">
    
    <nav class="flex mb-8 text-sm text-gray-400" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3 uppercase tracking-wider text-[10px] font-bold">
            <li><a href="/" class="hover:text-white transition-colors">Home</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/shop" class="hover:text-white transition-colors">Shop</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-white"><%= product.name %></li>
        </ol>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 xl:gap-16 items-start mb-20">
        
        <div class="lg:col-span-5 xl:col-span-5 flex flex-col gap-6">
            <div class="zoom-container bg-surface-dark rounded-3xl border border-white/5 flex items-center justify-center group">
                <img id="mainImage" src="<%= variants[0].images[0].url %>" alt="<%= product.name %>">
            </div>
            
            <div id="imageGallery" class="grid grid-cols-4 gap-4 w-full"></div>
        </div>

        <div class="lg:col-span-7 xl:col-span-7 flex flex-col">
            <div class="flex items-center gap-3 mb-2">
                <span class="px-3 py-1 bg-white/5 text-gray-300 text-[12px] font-bold uppercase tracking-widest rounded-full border border-white/10">
                    <%= product.gender %>
                </span>
                <span class="px-3 py-1 bg-white/5 text-gray-300 text-[12px] font-bold uppercase tracking-widest rounded-full border border-white/10">
                    <%= product.category.name %>
                </span>
            </div>

            <h1 class="text-4xl xl:text-5xl font-extrabold mb-4 tracking-tight"><%= product.name %></h1>
            
            <div class="flex items-center gap-2 mb-6 text-sm">
                <div class="flex text-yellow-500">
                    <% for(let i=1; i<=5; i++) { %>
                        <span class="material-icons-outlined text-sm">
                            <%= i <= averageRating ? 'star' : (i - 0.5 <= averageRating ? 'star_half' : 'star_outline') %>
                        </span>
                    <% } %>
                </div>
                <span class="text-gray-400 font-medium">(<%= reviewCount %> reviews)</span>
            </div>

            <div class="flex items-baseline gap-4 mb-8">
                <span class="text-4xl font-bold">₹<%= finalPrice.toLocaleString() %></span>
                <% if (product.price > finalPrice) { %>
                    <span class="text-xl text-gray-500 line-through font-medium">₹<%= product.price.toLocaleString() %></span>
                    <span class="bg-green-500/10 text-green-500 px-3 py-1 rounded-lg text-xs font-bold">
                        <%= Math.round(((product.price - finalPrice) / product.price) * 100) %>% OFF
                    </span>
                <% } %>
            </div>

            <div class="mb-8">
                <span class="text-[10px] font-extrabold uppercase tracking-[0.2em] text-gray-500 block mb-4">Available Colors</span>
                <div class="flex flex-wrap gap-3" id="variantContainer">
                    <% variants.forEach((variant, index) => { %>
                        <button 
                            onclick="selectVariant('<%= variant._id %>')" 
                            data-variant-id="<%= variant._id %>"
                            class="variant-btn <%= index === 0 ? 'active' : '' %> px-5 py-2.5 rounded-xl border border-border-dark text-[11px] font-bold transition-all uppercase">
                            <%= variant.color %>
                        </button>
                    <% }) %>
                </div>
            </div>

            <div class="mb-10">
                <div class="flex justify-between items-center mb-4">
                    <span class="text-[10px] font-extrabold uppercase tracking-[0.2em] text-gray-500">Select Size (UK)</span>
                    <span id="stockStatus" class="text-[10px] font-bold uppercase tracking-widest"></span>
                </div>
                <div class="flex flex-wrap gap-3" id="sizeContainer"></div>
            </div>

            <div class="mb-8 flex items-center gap-4">
                <span class="text-[10px] font-extrabold uppercase tracking-[0.2em] text-gray-500">Quantity</span>
                <div class="flex items-center bg-surface-dark border border-white/5 rounded-xl overflow-hidden">
                    <button onclick="updateQty(-1)" class="p-3 hover:bg-white/5 transition-colors text-gray-400 select-none"><span class="material-icons-outlined">remove</span></button>
                    <input type="number" id="qtyInput" value="1" readonly class="bg-transparent w-16 text-center font-bold text-sm focus:outline-none">
                    <button onclick="updateQty(1)" class="p-3 hover:bg-white/5 transition-colors text-gray-400 select-none"><span class="material-icons-outlined">add</span></button>
                </div>
            </div>

            <div class="flex gap-4 mb-10 max-w-md">
                <button 
                    id="addToCartBtn"
                    onclick="handleAddToCart()"
                    class="flex-1 bg-primary hover:bg-indigo-600 text-white font-bold py-5 rounded-2xl transition-all shadow-lg shadow-indigo-500/20 active:scale-95 flex items-center justify-center gap-2">
                    <span class="material-icons-outlined text-xl">shopping_bag</span>
                    <span id="btnText">Add to Cart</span>
                </button>
                <button class="w-16 h-16 rounded-2xl bg-surface-dark border border-white/5 flex items-center justify-center hover:bg-white/10 transition-colors text-gray-400 hover:text-red-500">
                    <span class="material-icons-outlined text-2xl">favorite_border</span>
                </button>
            </div>
            
            <div class="p-6 bg-surface-dark rounded-3xl border border-white/5">
                <h4 class="text-[10px] font-extrabold uppercase tracking-[0.2em] text-gray-500 mb-3">Product Description</h4>
                <p class="text-gray-400 text-sm leading-relaxed font-medium">
                    <%= product.description %>
                </p>
            </div>
        </div>
    </div>

    <section class="mt-20 border-t border-white/5 pt-20">
        <div class="flex justify-between items-end mb-10">
            <div>
                <h2 class="text-3xl font-bold tracking-tight">You Might Also Like</h2>
                <div class="h-1.5 w-16 bg-primary mt-3 rounded-full"></div>
            </div>
            <a href="/shop" class="text-primary text-sm font-bold hover:text-white transition-colors">View All →</a>
        </div>
        
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-10">
            <% relatedProducts.forEach(rel => { %>
                <a href="/product/<%= rel.slug %>" class="group">
                    <div class="bg-surface-dark rounded-[2rem] p-4 border border-white/5 group-hover:border-primary/40 transition-all duration-300">
                        <div class="aspect-square rounded-2xl overflow-hidden bg-[#1a1c21] mb-5 flex items-center justify-center p-6">
                            <img src="<%= rel.thumbnail %>" class="w-full h-full object-contain group-hover:scale-110 transition-transform duration-500">
                        </div>
                        <div class="px-1">
                            <h3 class="font-bold text-sm lg:text-base mb-1 truncate text-white uppercase"><%= rel.name %></h3>
                            <div class="flex gap-2 mb-3">
                                <span class="text-[11px] font-bold text-gray-500 uppercase tracking-tighter"><%= rel.category.name %></span>
                                <span class="text-[11px] font-bold text-gray-400 uppercase tracking-tighter">•</span>
                                <span class="text-[11px] font-bold text-gray-500 uppercase tracking-tighter"><%= rel.gender %>'s</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <p class="font-extrabold text-base text-primary">₹<%= rel.finalPrice.toLocaleString() %></p>
                                <% if(rel.price > rel.finalPrice) { %>
                                    <p class="text-xs text-gray-500 line-through">₹<%= rel.price.toLocaleString() %></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    </section>

</main>

<script>
    const variants = <%- JSON.stringify(variants) %>;
    let selectedVariantId = variants[0]._id;
    let selectedSize = null;
    let selectedInventoryId = null; 
    let currentMaxStock = 0;

    const mainImage = document.getElementById('mainImage');
    const imageGallery = document.getElementById('imageGallery');
    const sizeContainer = document.getElementById('sizeContainer');
    const stockStatus = document.getElementById('stockStatus');
    const qtyInput = document.getElementById('qtyInput');
    const addToCartBtn = document.getElementById('addToCartBtn');
    const btnText = document.getElementById('btnText');
    const container = document.querySelector('.zoom-container');

    function showToast(message, type = 'success') {
        const toast = document.createElement('div');
        toast.className = `fixed top-24 right-8 flex items-center gap-3 px-6 py-4 rounded-2xl border transition-all duration-500 transform translate-x-full opacity-0 z-[100] shadow-2xl backdrop-blur-md`;
        
        if (type === 'success') {
            toast.classList.add('bg-surface-dark/90', 'border-green-500/50', 'text-white');
            toast.innerHTML = `<div class="flex items-center justify-center w-8 h-8 rounded-full bg-green-500/20"><span class="material-icons-outlined text-green-500 text-lg">check_circle</span></div><span class="text-sm font-bold tracking-wide">${message}</span>`;
        } else {
            toast.classList.add('bg-surface-dark/90', 'border-red-500/50', 'text-white');
            toast.innerHTML = `<div class="flex items-center justify-center w-8 h-8 rounded-full bg-red-500/20"><span class="material-icons-outlined text-red-500 text-lg">error_outline</span></div><span class="text-sm font-bold tracking-wide">${message}</span>`;
        }

        document.body.appendChild(toast);
        setTimeout(() => toast.classList.remove('translate-x-full', 'opacity-0'), 100);
        setTimeout(() => {
            toast.classList.add('translate-x-full', 'opacity-0');
            setTimeout(() => toast.remove(), 500);
        }, 3000);
    }

    function selectVariant(variantId) {
        selectedVariantId = variantId;
        selectedSize = null; 
        selectedInventoryId = null;
        qtyInput.value = 1;

        document.querySelectorAll('.variant-btn').forEach(btn => {
            btn.classList.toggle('active', btn.dataset.variantId === variantId);
        });

        const variant = variants.find(v => v._id === variantId);
        updateMainImage(variant.images[0].url);
        imageGallery.innerHTML = variant.images.map(img => `
            <button onclick="updateMainImage('${img.url}')" class="bg-surface-dark rounded-xl overflow-hidden aspect-square border border-white/5 hover:border-primary transition-all p-2">
                <img src="${img.url}" class="w-full h-full object-contain">
            </button>
        `).join('');

        const sortedSizes = [...variant.sizes].sort((a, b) => parseFloat(a.size) - parseFloat(b.size));
        renderSizes(sortedSizes);
        updateStockDisplay();

        const firstAvailable = sortedSizes.find(s => s.inStock && s.stock > 0);
        if (firstAvailable) {
            selectSize(firstAvailable.size, firstAvailable.stock, firstAvailable.inventoryId);
        }
    }

    function renderSizes(sizes) {
        sizeContainer.innerHTML = sizes.map(s => `
            <button onclick="${s.inStock ? `selectSize('${s.size}', ${s.stock}, '${s.inventoryId}')` : ''}"
                class="size-btn w-14 h-14 flex items-center justify-center rounded-xl border-2 transition-all font-bold text-sm ${s.inStock ? 'border-border-dark hover:border-primary' : 'disabled'}"
                data-size="${s.size}">${s.size}</button>
        `).join('');
    }

    function selectSize(size, stock, invId) {
        selectedSize = size;
        currentMaxStock = stock;
        selectedInventoryId = invId; 
        qtyInput.value = 1;
        document.querySelectorAll('.size-btn').forEach(btn => btn.classList.toggle('active', btn.dataset.size == size));
        updateStockDisplay();
    }

    function updateStockDisplay() {
        const variant = variants.find(v => v._id === selectedVariantId);
        const isAllOutOfStock = variant.sizes.every(s => !s.inStock || s.stock <= 0);

        if (isAllOutOfStock) {
            stockStatus.textContent = "Out of Stock";
            stockStatus.className = "text-[10px] text-red-500 font-bold uppercase tracking-widest";
            addToCartBtn.classList.add('opacity-40', 'cursor-not-allowed');
            return;
        }

        if (!selectedSize) {
            stockStatus.textContent = "Select a size";
            stockStatus.className = "text-[10px] text-gray-500 font-bold uppercase tracking-widest";
            addToCartBtn.classList.remove('opacity-70', 'opacity-40', 'cursor-not-allowed');
            return;
        }

        if (currentMaxStock > 0) {
            stockStatus.textContent = "In Stock";
            stockStatus.className = "text-[10px] text-green-500 font-bold uppercase tracking-widest";
            addToCartBtn.classList.remove('opacity-70', 'cursor-not-allowed');
        } else {
            stockStatus.textContent = "Out of Stock";
            stockStatus.className = "text-[10px] text-red-500 font-bold uppercase tracking-widest";
            addToCartBtn.classList.add('opacity-40', 'cursor-not-allowed');
        }
    }

    function updateQty(delta) {
        if (!selectedSize) return;
        let val = parseInt(qtyInput.value) + delta;
        if (val >= 1 && val <= 3) qtyInput.value = val;
    }

    async function handleAddToCart() {
        if (!selectedSize) {
            addToCartBtn.classList.add('animate-shake', 'bg-red-500/20', 'text-red-500');
            btnText.textContent = "Select Size";
            setTimeout(() => {
                addToCartBtn.classList.remove('animate-shake', 'bg-red-500/20', 'text-red-500');
                btnText.textContent = "Add to Cart";
            }, 1000);
            return;
        }
        const cartData = { productId: "<%= product._id %>", variantId: selectedVariantId, inventoryId: selectedInventoryId, quantity: parseInt(qtyInput.value) };
        try {
            btnText.textContent = "Adding...";
            addToCartBtn.disabled = true;
            const response = await fetch('/cart/add', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(cartData) });
            const result = await response.json();
            if (response.ok) {

                window.dispatchEvent(new CustomEvent('cartUpdated', { 
                detail: { count: result.newCount } 
            }));
            
                showToast(result.message);
                btnText.textContent = "Added!";
                addToCartBtn.classList.add('bg-green-600');
            } else throw new Error(result.message || 'Something went wrong');
        } catch (error) {
            showToast(error.message, 'error');
            btnText.textContent = "Error";
        } finally {
            setTimeout(() => {
                btnText.textContent = "Add to Cart";
                addToCartBtn.classList.remove('bg-green-600');
                addToCartBtn.disabled = false;
            }, 1000);
        }
    }

    function updateMainImage(url) {
        mainImage.src = url;
        mainImage.style.transform = "scale(1)";
    }

    // --- ZOOM FUNCTIONALITY RESTORED ---
    container.addEventListener('mousemove', (e) => {
        const rect = container.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        mainImage.style.transformOrigin = `${x}px ${y}px`;
        mainImage.style.transform = "scale(2)";
    });

    container.addEventListener('mouseleave', () => {
        mainImage.style.transformOrigin = "center center";
        mainImage.style.transform = "scale(1)";
    });

    // Initialize
    selectVariant(selectedVariantId);
</script>

</body>
</html>