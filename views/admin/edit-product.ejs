<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WalkAura | Edit Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        :root { --bg-main: #000000; --bg-card: #141414; --bg-input: #1e1e1e; --accent: #5c56f6; --text-muted: #94a3b8; }
        body { background-color: var(--bg-main); color: #f1f5f9; font-family: 'Inter', sans-serif; }
        .section-card { background-color: var(--bg-card); border: 1px solid rgba(255,255,255,0.05); border-radius: 1.25rem; padding: 2rem; }
        .form-input { background-color: var(--bg-input); border: 1px solid rgba(255,255,255,0.1); border-radius: 0.75rem; padding: 0.8rem 1rem; width: 100%; color: white; transition: all 0.2s; }
        .form-input:focus { border-color: var(--accent); outline: none; box-shadow: 0 0 0 4px rgba(92, 86, 246, 0.2); }
        .form-input.error { border-color: #ef4444 !important; box-shadow: 0 0 0 1px #ef4444; }
        .label-style { font-size: 0.7rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.5rem; display: block; }
        
        input[type="number"]::-webkit-inner-spin-button { display: none; }
        input[type="date"]::-webkit-calendar-picker-indicator { filter: invert(1); cursor: pointer; }
    </style>
</head>
<body class="antialiased pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-10">
        <div class="flex items-center gap-5 mb-10 border-b border-white/5 pb-8">
            <a href="/admin/products" class="w-12 h-12 flex items-center justify-center rounded-2xl bg-[#141414] border border-white/10 hover:bg-white/5 transition-all">
                <span class="material-symbols-outlined text-gray-400">arrow_back</span>
            </a>
            <div>
                <h1 class="text-3xl font-black tracking-tight text-white">Edit Product</h1>
                <p class="text-slate-500 text-sm font-medium">Update base product details</p>
            </div>
        </div>

        <form id="editProductForm" novalidate>
            <div class="grid grid-cols-12 gap-8">
                
                <div class="col-span-12 lg:col-span-8 space-y-8">
                    <section class="section-card">
                        <div class="flex items-center gap-3 mb-8">
                            <span class="material-symbols-outlined text-[#5c56f6]">info</span>
                            <h2 class="text-lg font-bold">General Details</h2>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="md:col-span-2">
                                <label class="label-style">Product Name</label>
                                <input type="text" name="name" class="form-input" value="<%= product.name %>" placeholder="Enter product name">
                            </div>
                            <div class="md:col-span-2">
                                <label class="label-style">Description</label>
                                <textarea name="description" rows="5" class="form-input" placeholder="Detailed product description..."><%= product.description %></textarea>
                            </div>
                            <div>
                                <label class="label-style">Category</label>
                                <select name="category" class="form-input">
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat._id %>" <%= (product.category._id && product.category._id.toString() === cat._id.toString()) || (product.category.toString() === cat._id.toString()) ? 'selected' : '' %>>
                                            <%= cat.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div>
                                <label class="label-style">Gender Target</label>
                                <select name="gender" class="form-input">
                                    <option value="Men" <%= product.gender === 'Men' ? 'selected' : '' %>>Men</option>
                                    <option value="Women" <%= product.gender === 'Women' ? 'selected' : '' %>>Women</option>
                                    <option value="Unisex" <%= product.gender === 'Unisex' ? 'selected' : '' %>>Unisex</option>
                                </select>
                            </div>
                        </div>
                    </section>

                    <div class="p-6 rounded-2xl bg-indigo-500/5 border border-indigo-500/20 flex items-start gap-4">
                        <span class="material-symbols-outlined text-indigo-400">settings_suggest</span>
                        <div>
                            <p class="text-sm font-bold text-white">Next Steps</p>
                            <p class="text-xs text-slate-400 mt-1">
                                Variants and inventory are managed separately from the product editor.
                            </p>
                        </div>
                    </div>

                    <div class="flex justify-end items-center gap-4 pt-4">
                        <button type="button" onclick="window.history.back()" class="px-6 py-3 rounded-xl text-sm font-bold text-slate-500 hover:text-white transition-all">Discard</button>
                        <button type="submit" id="submitBtn" style="background-color: #5c56f6;" class="text-white px-12 py-4 rounded-xl font-bold shadow-lg shadow-indigo-500/20 transition-all text-lg">
                            Save Changes
                        </button>
                    </div>
                </div>

                <div class="col-span-12 lg:col-span-4">
                    <section class="section-card sticky top-10">
                        <div class="flex items-center gap-3 mb-8 text-rose-400">
                            <span class="material-symbols-outlined">sell</span>
                            <h2 class="text-lg font-bold text-white">Pricing</h2>
                        </div>
                        <div class="space-y-6">
                            <div>
                                <label class="label-style">Base Price (₹)</label>
                                <input type="number" id="price" name="price" class="form-input text-xl font-bold" value="<%= product.price %>" placeholder="0">
                            </div>
                            <div>
                                <label class="label-style">Offer (%)</label>
                                <input type="number" id="offerPercent" name="offerPercent" class="form-input" min="0" max="99" value="<%= product.offerPercent != null ? product.offerPercent : 0 %>">
                            </div>
                            
                            <div id="expiryContainer" class="<%= (product.offerPercent > 0) ? '' : 'hidden' %>">
                                <label class="label-style">Offer Expiry Date</label>
                                <input type="date" id="offerExpiry" name="offerExpiry" class="form-input" 
                                       value="<%= product.offerExpiry ? product.offerExpiry.toISOString().split('T')[0] : '' %>">
                            </div>

                            <div id="pricePreview" class="p-6 rounded-2xl bg-[#5c56f6]/5 border border-[#5c56f6]/10 text-center <%= (product.price > 0) ? '' : 'hidden' %>">
                                <p class="text-[10px] text-slate-500 font-bold uppercase mb-1">Final Selling Price</p>
                                <p id="finalPriceText" class="text-4xl font-black text-[#5c56f6]">₹0</p>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </form>
    </div>

    <script>
        const expiryInput = document.getElementById('offerExpiry');
        if (expiryInput) {
            const today = new Date().toISOString().split('T')[0];
            expiryInput.setAttribute('min', today);
        }

        const priceInput = document.getElementById('price');
        const offerInput = document.getElementById('offerPercent');
        const expiryContainer = document.getElementById('expiryContainer');

        function updatePrice() {
            const price = parseFloat(priceInput.value) || 0;
            const offer = parseFloat(offerInput.value) || 0;
            
            if (offer > 0) {
                expiryContainer.classList.remove('hidden');
            } else {
                expiryContainer.classList.add('hidden');
                expiryInput.value = "";
            }

            if (price > 0) {
                document.getElementById('pricePreview').classList.remove('hidden');
                const finalPrice = Math.round(price - (price * offer / 100));
                document.getElementById('finalPriceText').innerText = `₹${finalPrice.toLocaleString()}`;
            } else {
                document.getElementById('pricePreview').classList.add('hidden');
            }
        }
        
        updatePrice();

        priceInput.addEventListener('input', updatePrice);
        offerInput.addEventListener('input', updatePrice);

        // Validation Logic
        function validateForm() {
            let errors = [];
            const fields = document.querySelectorAll('.form-input');
            fields.forEach(f => f.classList.remove('error'));

            const name = document.getElementsByName('name')[0];
            const desc = document.getElementsByName('description')[0];
            const price = document.getElementById('price');
            const offer = document.getElementById('offerPercent');

            if (!name.value.trim()) { name.classList.add('error'); errors.push("Product name is required"); }
            if (!desc.value.trim()) { desc.classList.add('error'); errors.push("Description is required"); }
            if (!price.value || price.value <= 0) { price.classList.add('error'); errors.push("Valid base price is required"); }
            
            const offerVal = parseFloat(offer.value) || 0;
            if (offerVal > 0 && !expiryInput.value) {
                expiryInput.classList.add('error');
                errors.push("Offer expiry date is required when an offer is applied");
            }

            return errors;
        }

        // Form Submit
        document.getElementById('editProductForm').onsubmit = async (e) => {
            e.preventDefault();
            
            const errors = validateForm();
            if (errors.length > 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Details',
                    html: `<ul class="text-left text-sm space-y-1">${errors.map(err => `<li>• ${err}</li>`).join('')}</ul>`,
                    background: '#141414',
                    color: '#fff'
                });
                return;
            }

            const formData = new FormData(e.target);
            const jsonData = Object.fromEntries(formData.entries());

            try {
                Swal.fire({ 
                    title: 'Saving Changes...', 
                    didOpen: () => Swal.showLoading(), 
                    background: '#141414', 
                    color: '#fff' 
                });

                const res = await fetch('/admin/products/edit/<%= product._id %>', { 
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(jsonData)
                });
                
                const data = await res.json();

                if (!res.ok) {
                    throw new Error(data.message || 'Failed to update product');
                }

                await Swal.fire({
                    icon: 'success',
                    title: 'Changes Saved',
                    text: 'Product information updated successfully.',
                    background: '#141414',
                    color: '#fff',
                    timer: 2000,
                    showConfirmButton: false
                });

                window.location.href = '/admin/products'; 

            } catch (err) {
                Swal.fire({ 
                    icon: 'error', 
                    title: 'Error', 
                    text: err.message, 
                    background: '#141414', 
                    color: '#fff' 
                });
            }
        };
    </script>
</body>
</html>