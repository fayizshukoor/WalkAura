<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="pt-10 pb-10 px-4">
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4 mb-8 max-w-7xl mx-auto">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Coupon Management</h1>
            <p class="text-gray-500 text-sm mt-1">Create and manage discount codes for your customers.</p>
        </div>

        <div class="flex flex-col md:flex-row gap-3 w-full lg:w-auto">
            <div class="relative flex-1 md:w-64">
                <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-xl">search</span>
                <input type="text" id="couponSearchInput" placeholder="Search by code or name..." value="<%= search %>"
                    class="w-full bg-[#111] border border-gray-800 rounded-xl py-2.5 pl-10 pr-4 text-sm focus:outline-none focus:border-[#5c56f6] transition-colors text-white" />
            </div>
            <button onclick="openAddCoupon()" class="bg-[#5c56f6] hover:bg-[#4a44e0] text-white px-6 py-2.5 rounded-xl text-sm font-bold transition-all flex items-center justify-center gap-2 shadow-lg shadow-[#5c56f6]/10">
                <span class="material-symbols-outlined text-lg">add</span> Add Coupon
            </button>
        </div>
    </div>

    <div class="bg-[#111] rounded-2xl border border-gray-800 overflow-hidden max-w-7xl mx-auto shadow-2xl">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
                <thead class="text-gray-500 border-b border-gray-800 bg-white/[0.01]">
                    <tr>
                        <th class="p-5 font-semibold uppercase text-[10px] tracking-wider">Coupon Information</th>
                        <th class="p-5 font-semibold uppercase text-[10px] tracking-wider text-center">Offer Details</th>
                        <th class="p-5 font-semibold uppercase text-[10px] tracking-wider text-center">Requirement</th>
                        <th class="p-5 font-semibold uppercase text-[10px] tracking-wider text-center">Expiry</th>
                        <th class="p-5 font-semibold uppercase text-[10px] tracking-wider text-center">Status</th>
                        <th class="p-5 font-semibold uppercase text-[10px] tracking-wider text-center">Quick Management</th>
                    </tr>
                </thead>
                <tbody id="couponTableBody" class="divide-y divide-gray-900">
                    <% if (coupons && coupons.length > 0) { %>
                        <% coupons.forEach(coupon => { 
                            const isExpired = new Date(coupon.expiryDate) < new Date();
                            const formattedDate = new Date(coupon.expiryDate).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
                            const couponJson = JSON.stringify(coupon).replace(/'/g, "\\'").replace(/"/g, '&quot;');
                        %>
                        <tr class="hover:bg-white/[0.02] transition-colors group">
                            <td class="p-5">
                                <div class="font-medium text-white text-base"><%= coupon.name %></div>
                                <div class="text-xs text-[#5c56f6] font-mono mt-1 bg-[#5c56f6]/10 inline-block px-2 py-0.5 rounded border border-[#5c56f6]/20"><%= coupon.code %></div>
                            </td>
                            <td class="p-5 text-center">
                                <div class="text-white font-bold text-lg"><%= coupon.discountPercentage %>% OFF</div>
                                <div class="text-[11px] text-gray-400 mt-1 font-semibold uppercase tracking-wide">Max Disc: <span class="text-green-500"><%= coupon.maxDiscountAmount ? '₹' + coupon.maxDiscountAmount : "Unlimited" %></span></div>
                            </td>
                            <td class="p-5 text-center">
                                <div class="text-gray-300 font-medium">Usage: <%= coupon.usedCount || 0 %> / <span class="text-white"><%= coupon.usageLimit ? coupon.usageLimit : "∞" %></span></div>
                                <div class="text-[11px] text-gray-400 font-semibold mt-1 uppercase tracking-wide">Min Spend: <span class="text-[#5c56f6]">₹<%= coupon.minCartValue %></span></div>
                            </td>
                            <td class="p-5 text-center text-gray-400">
                                <div class="text-white font-medium"><%= formattedDate %></div>
                            </td>
                            <td class="p-5 text-center">
                                <span class="inline-flex px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest border 
                                    <%= isExpired ? 'bg-orange-500/10 text-orange-500 border-orange-500/20' : (coupon.isActive ? 'bg-green-500/10 text-green-500 border-green-500/20' : 'bg-red-500/10 text-red-500 border-red-500/20') %>">
                                    <%= isExpired ? 'Expired' : (coupon.isActive ? 'Active' : 'Inactive') %>
                                </span>
                            </td>
                            <td class="p-5">
                                <div class="flex items-center justify-center gap-6">
                                    <% if (!isExpired) { %>
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" <%= coupon.isActive ? 'checked' : '' %> onchange="toggleStatus('<%= coupon._id %>')" class="sr-only peer">
                                        <div class="w-9 h-5 bg-gray-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:bg-[#5c56f6] after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-gray-500 after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:after:bg-white"></div>
                                    </label>
                                    <% } else { %>
                                        <span class="material-symbols-outlined text-gray-700 text-lg">block</span>
                                    <% } %>
                                    
                                    <div class="flex items-center gap-3 border-l border-gray-800 pl-6">
                                        <button onclick="openEditCoupon('<%= couponJson %>')" class="text-gray-500 hover:text-[#5c56f6] transition-colors"><span class="material-symbols-outlined text-[20px]">edit_square</span></button>
                                        <button onclick="deleteCoupon('<%= coupon._id %>')" class="text-gray-500 hover:text-red-500 transition-colors"><span class="material-symbols-outlined text-[20px]">delete</span></button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="6" class="p-20 text-center text-gray-500 italic">No coupons found.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div id="paginationContainer" class="px-6 py-5 bg-white/[0.02] border-t border-gray-800">
             </div>
    </div>
</div>

<div id="couponModal" class="hidden fixed inset-0 z-[100] overflow-y-auto">
    <div class="modal-backdrop fixed inset-0 bg-black/80 backdrop-blur-sm" onclick="toggleCouponModal('couponModal', false)"></div>
    <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative bg-[#111] border border-gray-800 rounded-2xl w-full max-w-xl shadow-2xl">
            <form id="couponForm">
                <input type="hidden" id="couponId" name="id">
                
                <div class="p-6 border-b border-gray-800 flex justify-between items-center text-white">
                    <h3 id="modalTitle" class="text-xl font-bold">Add New Coupon</h3>
                    <button type="button" onclick="toggleCouponModal('couponModal', false)" class="text-gray-500 hover:text-white">
                        <span class="material-symbols-outlined">close</span>
                    </button>
                </div>

                <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-5">
                    <div class="md:col-span-2">
                        <label class="text-[10px] uppercase font-bold text-gray-500 ml-1">Title (Display Name)</label>
                        <input type="text" name="name" id="cName"  class="w-full bg-[#0a0a0a] border border-gray-800 rounded-xl py-3 px-4 text-white focus:border-[#5c56f6] outline-none transition-all placeholder:text-gray-700" placeholder="e.g. Summer Bonanza">
                    </div>

                    <div>
                        <label class="text-[10px] uppercase font-bold text-gray-500 ml-1">Coupon Code</label>
                        <input type="text" name="code" id="cCode"  class="w-full bg-[#0a0a0a] border border-gray-800 rounded-xl py-3 px-4 text-white font-mono focus:border-[#5c56f6] outline-none uppercase" placeholder="SUMMER50">
                    </div>

                    <div>
                        <label class="text-[10px] uppercase font-bold text-gray-500 ml-1">Expiry Date</label>
                        <input type="date" name="expiryDate" id="cExpiry"  class="w-full bg-[#0a0a0a] border border-gray-800 rounded-xl py-3 px-4 text-white focus:border-[#5c56f6] outline-none [color-scheme:dark]">
                    </div>

                    <div>
                        <label class="text-[10px] uppercase font-bold text-gray-500 ml-1">Discount % (1-90)</label>
                        <input type="number" name="discountPercentage" id="cOffer" min="1" max="90"  class="w-full bg-[#0a0a0a] border border-gray-800 rounded-xl py-3 px-4 text-white focus:border-[#5c56f6] outline-none">
                    </div>
                    <div>
                        <label class="text-[10px] uppercase font-bold text-gray-500 ml-1">Min Spend (₹)</label>
                        <input type="number" name="minCartValue" id="cMin"  class="w-full bg-[#0a0a0a] border border-gray-800 rounded-xl py-3 px-4 text-white focus:border-[#5c56f6] outline-none">
                    </div>
                    <div>
                        <label class="text-[10px] uppercase font-bold text-gray-500 ml-1">Max Cap (₹)</label>
                        <input type="number" name="maxDiscountAmount" id="cMax"  class="w-full bg-[#0a0a0a] border border-gray-800 rounded-xl py-3 px-4 text-white focus:border-[#5c56f6] outline-none">
                    </div>
                    <div>
                        <label class="text-[10px] uppercase font-bold text-gray-500 ml-1">Usage Limit</label>
                        <input type="number" name="usageLimit" id="cUsage"  class="w-full bg-[#0a0a0a] border border-gray-800 rounded-xl py-3 px-4 text-white focus:border-[#5c56f6] outline-none">
                    </div>
                </div>

                <div class="p-6 bg-[#0a0a0a] flex justify-end gap-3 rounded-b-2xl">
                    <button type="button" onclick="toggleCouponModal('couponModal', false)" class="text-gray-400 font-bold px-4 hover:text-white transition-colors">Cancel</button>
                    <button type="submit" class="bg-[#5c56f6] hover:bg-[#4a44e0] text-white px-8 py-2.5 rounded-xl font-bold transition-all shadow-lg shadow-[#5c56f6]/20">Save Coupon</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    /* 1. GLOBAL STATE INITIALIZED FROM EJS */
    let currentPage = parseInt('<%= pagination.currentPage %>') || 1;
    let currentSearch = '<%= search %>';
    let searchTimeout;

    const Toast = Swal.mixin({
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 3000,
        timerProgressBar: true,
        background: '#111',
        color: '#fff'
    });

    /* 2. INITIALIZATION */
    document.addEventListener('DOMContentLoaded', () => {
        setMinDate();
        setupEventListeners();
        // Initial pagination render based on server data
        renderPagination(currentPage, parseInt('<%= pagination.totalPages %>') || 1);
    });

    function setupEventListeners() {
        const searchInput = document.getElementById('couponSearchInput');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    currentSearch = this.value;
                    currentPage = 1;
                    refreshData(); // Triggers getCouponsPageAjax
                }, 500);
            });
        }
        const couponForm = document.getElementById('couponForm');
        if (couponForm) couponForm.addEventListener('submit', handleFormSubmit);
    }

    function setMinDate() {
        const today = new Date().toISOString().split('T')[0];
        const expiryInput = document.getElementById('cExpiry');
        if (expiryInput) expiryInput.setAttribute('min', today);
    }

    /* 3. CORE API ACTIONS */
    async function refreshData() {
        try {
            const response = await fetch(`/admin/coupons/data?page=${currentPage}&search=${encodeURIComponent(currentSearch)}`);
            const data = await response.json();
            if (data.success) {
                renderTable(data.coupons);
                renderPagination(data.pagination.currentPage, data.pagination.totalPages);
            }
        } catch (error) {
            console.error("AJAX refresh failed:", error);
        }
    }

    async function handleFormSubmit(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData.entries());
        const isEdit = !!data.id;

        try {
            Swal.fire({
                title: 'Saving...',
                allowOutsideClick: false,
                didOpen: () => Swal.showLoading(),
                background: '#111', color: '#fff'
            });

            const response = await fetch(isEdit ? `/admin/coupons/edit/${data.id}` : '/admin/coupons/add', {
                method: isEdit ? 'PUT' : 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'Accept': 'application/json'
                },
                body: JSON.stringify(data)
            });

            const result = await response.json();
            if (result.success) {
                toggleCouponModal('couponModal', false);
                refreshData();
                Swal.fire({ icon: 'success', title: result.message, background: '#111', color: '#fff' });
            } else {
                Swal.fire({ icon: 'error', title: 'Oops...', text: result.message, background: '#111', color: '#fff' });
            }
        } catch (error) {
            Swal.fire({ icon: 'error', title: 'Network Error', background: '#111', color: '#fff' });
        }
    }

    async function toggleStatus(id) {
        try {
            const response = await fetch(`/admin/coupons/toggle-status/${id}`, { method: 'PATCH' });
            const result = await response.json();
            if (result.success) {
                refreshData();
                Toast.fire({ icon: 'success', title: result.message });
            }
        } catch (error) { console.error("Toggle failed:", error); }
    }

    async function deleteCoupon(id) {
        const confirm = await Swal.fire({
            title: 'Are you sure you want to Delete?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#5c56f6',
            background: '#111', color: '#fff'
        });

        if (confirm.isConfirmed) {
            try {
                const response = await fetch(`/admin/coupons/delete/${id}`, { method: 'DELETE' });
                const result = await response.json();
                if (result.success) {
                    refreshData();
                    Swal.fire({ title: result.message, icon: 'success', background: '#111', color: '#fff' });
                }
            } catch (error) { console.error("Delete failed:", error); }
        }
    }

    /* 4. UI RENDERING */
    function renderTable(coupons) {
        const tbody = document.getElementById('couponTableBody');
        if (!tbody) return;
        if (!coupons || coupons.length === 0) {
            tbody.innerHTML = `<tr><td colspan="6" class="p-20 text-center text-gray-500 italic">No coupons found.</td></tr>`;
            return;
        }
        tbody.innerHTML = coupons.map(coupon => {
            const isExpired = new Date(coupon.expiryDate) < new Date();
            const formattedDate = new Date(coupon.expiryDate).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
            const couponJson = JSON.stringify(coupon).replace(/'/g, "\\'").replace(/"/g, '&quot;');
            return `
                <tr class="hover:bg-white/[0.02] transition-colors group">
                    <td class="p-5">
                        <div class="font-medium text-white text-base">${coupon.name}</div>
                        <div class="text-xs text-[#5c56f6] font-mono mt-1 bg-[#5c56f6]/10 inline-block px-2 py-0.5 rounded border border-[#5c56f6]/20">${coupon.code}</div>
                    </td>
                    <td class="p-5 text-center">
                        <div class="text-white font-bold text-lg">${coupon.discountPercentage}% OFF</div>
                        <div class="text-[11px] text-gray-400 mt-1 font-semibold uppercase tracking-wide">Max Disc: <span class="text-green-500">${coupon.maxDiscountAmount || "Unlimited"}</span></div>
                    </td>
                    <td class="p-5 text-center">
                        <div class="text-gray-300 font-medium">Usage: ${coupon.usedCount || 0} / <span class="text-white">${coupon.usageLimit || "∞" }</span></div>
                        <div class="text-[11px] text-gray-400 font-semibold mt-1 uppercase tracking-wide">Min Spend: <span class="text-[#5c56f6]">₹${coupon.minCartValue}</span></div>
                    </td>
                    <td class="p-5 text-center text-gray-400"><div class="text-white font-medium">${formattedDate}</div></td>
                    <td class="p-5 text-center">
                        <span class="inline-flex px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest border 
                            ${isExpired ? 'bg-orange-500/10 text-orange-500 border-orange-500/20' : (coupon.isActive ? 'bg-green-500/10 text-green-500 border-green-500/20' : 'bg-red-500/10 text-red-500 border-red-500/20')}">
                            ${isExpired ? 'Expired' : (coupon.isActive ? 'Active' : 'Inactive')}
                        </span>
                    </td>
                    <td class="p-5">
                        <div class="flex items-center justify-center gap-6">
                            ${!isExpired ? `<label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" ${coupon.isActive ? 'checked' : ''} onchange="toggleStatus('${coupon._id}')" class="sr-only peer">
                                <div class="w-9 h-5 bg-gray-800 rounded-full peer peer-checked:after:translate-x-full peer-checked:bg-[#5c56f6] after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-gray-500 after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:after:bg-white"></div>
                            </label>` : `<span class="material-symbols-outlined text-gray-700 text-lg">block</span>`}
                            <div class="flex items-center gap-3 border-l border-gray-800 pl-6">
                                <button onclick="openEditCoupon('${couponJson}')" class="text-gray-500 hover:text-[#5c56f6] transition-colors"><span class="material-symbols-outlined text-[20px]">edit_square</span></button>
                                <button onclick="deleteCoupon('${coupon._id}')" class="text-gray-500 hover:text-red-500 transition-colors"><span class="material-symbols-outlined text-[20px]">delete</span></button>
                            </div>
                        </div>
                    </td>
                </tr>`;
        }).join('');
    }

    function renderPagination(current, total) {
        const container = document.getElementById('paginationContainer');
        if (!container || total <= 1) { container.innerHTML = ''; return; }
        let html = `<div class="flex flex-col md:flex-row items-center justify-between gap-5 w-full">
            <div class="hidden md:block flex-1"></div>
            <div class="flex items-center gap-2">`;
        if (current > 1) {
            html += `<button onclick="changePage(${current - 1})" class="px-3 py-1.5 bg-[#1a1a1a] border border-gray-800 rounded-lg text-xs text-gray-400 hover:text-white flex items-center gap-1"><span class="material-symbols-outlined text-sm">chevron_left</span> Prev</button>`;
        }
        for (let i = 1; i <= total; i++) {
            html += `<button onclick="changePage(${i})" class="w-8 h-8 flex items-center justify-center rounded-lg text-xs font-bold ${current === i ? 'bg-[#5c56f6] text-white shadow-lg' : 'bg-[#1a1a1a] border border-gray-800 text-gray-400'}">${i}</button>`;
        }
        if (current < total) {
            html += `<button onclick="changePage(${current + 1})" class="px-3 py-1.5 bg-[#1a1a1a] border border-gray-800 rounded-lg text-xs text-gray-400 hover:text-white flex items-center gap-1">Next <span class="material-symbols-outlined text-sm">chevron_right</span></button>`;
        }
        html += `</div><div class="flex-1 flex justify-end"><p class="text-[10px] uppercase tracking-widest font-bold text-gray-600">Page ${current} of ${total}</p></div></div>`;
        container.innerHTML = html;
    }

    function changePage(page) {
        currentPage = page;
        refreshData();
    }

    /* 5. MODAL HANDLERS */
    function toggleCouponModal(id, show) {
        document.getElementById(id).classList.toggle('hidden', !show);
    }
    function openAddCoupon() {
        const form = document.getElementById('couponForm');
        const codeInput = document.getElementById('cCode');
        form.reset();
        document.getElementById('couponId').value = '';
        document.getElementById('modalTitle').innerText = 'Add New Coupon';
        codeInput.readOnly = false;
        codeInput.classList.remove('opacity-50', 'cursor-not-allowed');
        setMinDate();
        toggleCouponModal('couponModal', true);
    }
    function openEditCoupon(couponJsonRaw) {
        const coupon = JSON.parse(couponJsonRaw.replace(/&quot;/g, '"').replace(/\\'/g, "'"));
        const codeInput = document.getElementById('cCode');
        document.getElementById('modalTitle').innerText = 'Edit Coupon';
        document.getElementById('couponId').value = coupon._id;
        document.getElementById('cName').value = coupon.name;
        codeInput.value = coupon.code;
        codeInput.readOnly = true;
        codeInput.classList.add('opacity-50', 'cursor-not-allowed');
        document.getElementById('cOffer').value = coupon.discountPercentage;
        document.getElementById('cMin').value = coupon.minCartValue;
        document.getElementById('cMax').value = coupon.maxDiscountAmount;
        document.getElementById('cUsage').value = coupon.usageLimit;
        document.getElementById('cExpiry').value = new Date(coupon.expiryDate).toISOString().split('T')[0];
        toggleCouponModal('couponModal', true);
    }
</script>