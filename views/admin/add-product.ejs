<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WalkAura | Add Product</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        :root { --bg-main: #000000; --bg-card: #141414; --bg-input: #1e1e1e; --accent: #5c56f6; --text-muted: #94a3b8; }
        body { background-color: var(--bg-main); color: #f1f5f9; font-family: 'Inter', sans-serif; }
        .section-card { background-color: var(--bg-card); border: 1px solid rgba(255,255,255,0.05); border-radius: 1.25rem; padding: 2rem; }
        .form-input { background-color: var(--bg-input); border: 1px solid rgba(255,255,255,0.1); border-radius: 0.75rem; padding: 0.8rem 1rem; width: 100%; color: white; transition: all 0.2s; }
        .form-input:focus { border-color: var(--accent); outline: none; box-shadow: 0 0 0 4px rgba(92, 86, 246, 0.2); }
        .label-style { font-size: 0.7rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.5rem; display: block; }
        
        /* Image Slot Logic */
        .image-placeholder { 
            aspect-ratio: 1/1; border: 2px dashed rgba(255,255,255,0.1); border-radius: 1rem; 
            display: flex; align-items: center; justify-content: center; background: rgba(0,0,0,0.2); 
            position: relative; overflow: hidden; transition: all 0.3s;
        }
        .image-placeholder.active { cursor: pointer; border-color: var(--accent); background: rgba(92, 86, 246, 0.05); }
        .image-placeholder.locked { opacity: 0.2; cursor: not-allowed; border-style: solid; }
        .image-placeholder img { width: 100%; height: 100%; object-fit: cover; }
        
        .replace-badge { position: absolute; bottom: 8px; right: 8px; background: var(--accent); color: white; padding: 4px 8px; border-radius: 6px; font-size: 10px; font-weight: 800; }
        .crop-container { max-height: 450px; overflow: hidden; background: #000; border-radius: 1rem; }
        input[type="number"]::-webkit-inner-spin-button { display: none; }
        
        /* Date picker dark theme adjustment */
        input[type="date"]::-webkit-calendar-picker-indicator {
            filter: invert(1);
            cursor: pointer;
        }
    </style>
</head>
<body class="antialiased pb-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-10">
        <div class="flex items-center gap-5 mb-10 border-b border-white/5 pb-8">
            <a href="/admin/products" class="w-12 h-12 flex items-center justify-center rounded-2xl bg-[#141414] border border-white/10 hover:bg-white/5 transition-all">
                <span class="material-symbols-outlined text-gray-400">arrow_back</span>
            </a>
            <div>
                <h1 class="text-3xl font-black tracking-tight text-white">Add Product</h1>
                <p class="text-slate-500 text-sm font-medium">Standard single-color configuration</p>
            </div>
        </div>
        <form id="mainProductForm" enctype="multipart/form-data">
            <div class="grid grid-cols-12 gap-8">
                
                <div class="col-span-12 lg:col-span-8 space-y-8">
                    <section class="section-card">
                        <div class="flex items-center gap-3 mb-8">
                            <span class="material-symbols-outlined text-[#5c56f6]">info</span>
                            <h2 class="text-lg font-bold">General Details</h2>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="md:col-span-2">
                                <label class="label-style">Product Name</label>
                                <input type="text" name="name" class="form-input" placeholder="Enter product name">
                            </div>
                            <div class="md:col-span-2">
                                <label class="label-style">Description</label>
                                <textarea name="description" rows="3" class="form-input"></textarea>
                            </div>
                            <div>
                                <label class="label-style">Category</label>
                                <select name="category" class="form-input">
                                    <option value="" disabled selected>Select Category</option>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat._id %>"><%= cat.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div>
                                <label class="label-style">Gender</label>
                                <select name="gender" class="form-input">
                                    <option value="Men">Men</option>
                                    <option value="Women">Women</option>
                                    <option value="Unisex">Unisex</option>
                                </select>
                            </div>
                            <div class="md:col-span-2">
                                <label class="label-style">Primary Color</label>
                                <input type="text" name="color" class="form-input" placeholder="e.g. Midnight Black">
                            </div>
                        </div>
                    </section>

                    <section class="section-card">
                        <div class="flex items-center gap-3 mb-8">
                            <span class="material-symbols-outlined text-amber-400">inventory_2</span>
                            <h2 class="text-lg font-bold">Inventory by Size (UK)</h2>
                        </div>
                        <div class="grid grid-cols-5 gap-4">
                            <% [6, 7, 8, 9, 10].forEach(sz => { %>
                                <div class="bg-black/40 p-4 rounded-2xl border border-white/5 text-center">
                                    <label class="block text-[10px] font-black text-slate-500 mb-2">SIZE <%= sz %></label>
                                    <input type="number" data-size="<%= sz %>" class="size-stock-input form-input text-center font-bold" value="0" min="0">
                                </div>
                            <% }) %>
                        </div>
                    </section>

                    <section class="section-card">
                        <div class="flex items-center gap-3 mb-4 text-emerald-400">
                            <span class="material-symbols-outlined">photo_library</span>
                            <h2 class="text-lg font-bold text-white">Product Gallery</h2>
                        </div>
                        <p class="text-xs text-slate-500 mb-8 font-medium">Slot 1 is your thumbnail. Slots unlock sequentially.</p>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <% for(let i=0; i<4; i++) { %>
                                <div id="placeholder-<%= i %>" 
                                     class="image-placeholder <%= i === 0 ? 'active' : 'locked' %>" 
                                     onclick="handleSlotClick(<%= i %>)">
                                    <div class="text-center text-slate-600">
                                        <span class="material-symbols-outlined text-2xl">add_a_photo</span>
                                        <p class="text-[9px] mt-1 font-black">SLOT <%= i+1 %></p>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        <input type="file" id="imageInput" accept="image/*" class="hidden" onchange="processFile(event)">
                        <div id="cropperWrapper" class="hidden mt-8 space-y-4 bg-black/60 p-6 rounded-2xl border border-[#5c56f6]/30">
                            <div class="crop-container">
                                <img id="cropperImage" src="">
                            </div>
                            <div class="flex justify-end gap-3">
                                <button type="button" onclick="cancelCrop()" class="px-6 py-2 text-sm font-bold text-slate-400">Cancel</button>
                                <button type="button" onclick="saveCrop()" style="background-color: #5c56f6;" class="px-8 py-2 rounded-lg font-bold text-sm text-white">Save Image</button>
                            </div>
                        </div>
                    </section>

                    <div class="flex justify-end items-center gap-4 pt-4">
                        <button type="button" onclick="window.history.back()" class="px-6 py-3 rounded-xl text-sm font-bold text-slate-500 hover:text-white transition-all">Discard</button>
                        <button type="submit" style="background-color: #5c56f6;" class="text-white px-12 py-4 rounded-xl font-bold shadow-lg shadow-indigo-500/20 transition-all text-lg">
                            Publish Product
                        </button>
                    </div>
                </div>

                <div class="col-span-12 lg:col-span-4">
                    <section class="section-card sticky top-10">
                        <div class="flex items-center gap-3 mb-8 text-rose-400">
                            <span class="material-symbols-outlined">sell</span>
                            <h2 class="text-lg font-bold text-white">Pricing</h2>
                        </div>
                        <div class="space-y-6">
                            <div>
                                <label class="label-style">Base Price (₹)</label>
                                <input type="number" id="price" name="price" class="form-input text-xl font-bold" placeholder="0">
                            </div>
                            <div>
                                <label class="label-style">Offer (%)</label>
                                <input type="number" id="offerPercent" name="offerPercent" class="form-input" min="0" max="99" value="0">
                            </div>
                            
                            <div id="expiryContainer" class="hidden">
                                <label class="label-style">Offer Expiry Date</label>
                                <input type="date" id="offerExpiry" name="offerExpiry" class="form-input">
                            </div>
                            <div id="pricePreview" class="p-6 rounded-2xl bg-[#5c56f6]/5 border border-[#5c56f6]/10 text-center hidden">
                                <p class="text-[10px] text-slate-500 font-bold uppercase mb-1">Final Selling Price</p>
                                <p id="finalPriceText" class="text-4xl font-black text-[#5c56f6]">₹0</p>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </form>
    </div>

    <script>
        let croppedBlobs = {}; 
        let currentSlot = null;
        let cropper = null;

        // Initialize Date Constraint
        const expiryInput = document.getElementById('offerExpiry');
        const today = new Date().toISOString().split('T')[0];
        expiryInput.setAttribute('min', today);

        // Slot Management
        function handleSlotClick(index) {
            const slot = document.getElementById(`placeholder-${index}`);
            if (slot.classList.contains('locked')) return;
            currentSlot = index;
            document.getElementById('imageInput').click();
        }

        function processFile(e) {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (event) => {
                document.getElementById('cropperWrapper').classList.remove('hidden');
                document.getElementById('cropperWrapper').scrollIntoView({ behavior: 'smooth' });
                const image = document.getElementById('cropperImage');
                image.src = event.target.result;
                if (cropper) cropper.destroy();
                cropper = new Cropper(image, { aspectRatio: 1, viewMode: 2 });
            };
            reader.readAsDataURL(file);
            e.target.value = "";
        }

        function cancelCrop() {
            document.getElementById('cropperWrapper').classList.add('hidden');
            if (cropper) cropper.destroy();
            currentSlot = null;
        }

        function saveCrop() {
            cropper.getCroppedCanvas({ width: 1000, height: 1000 }).toBlob((blob) => {
                croppedBlobs[currentSlot] = blob;
                const slot = document.getElementById(`placeholder-${currentSlot}`);
                slot.innerHTML = `<img src="${URL.createObjectURL(blob)}"><div class="replace-badge">REPLACE</div>`;
                
                if (currentSlot < 3) {
                    const nextSlot = document.getElementById(`placeholder-${currentSlot + 1}`);
                    nextSlot.classList.remove('locked');
                    nextSlot.classList.add('active');
                }
                cancelCrop();
            }, 'image/jpeg');
        }

        // Pricing Logic
        const pInp = document.getElementById('price');
        const oInp = document.getElementById('offerPercent');
        const expiryContainer = document.getElementById('expiryContainer');

        function updatePrice() {
            const p = parseFloat(pInp.value) || 0;
            const o = parseFloat(oInp.value) || 0;
            
            if (o > 0) {
                expiryContainer.classList.remove('hidden');
                expiryInput.required = true;
            } else {
                expiryContainer.classList.add('hidden');
                expiryInput.required = false;
                expiryInput.value = "";
            }

            if (p > 0) {
                document.getElementById('pricePreview').classList.remove('hidden');
                document.getElementById('finalPriceText').innerText = `₹${Math.round(p - (p * o / 100)).toLocaleString()}`;
            } else {
                document.getElementById('pricePreview').classList.add('hidden');
            }
        }
        pInp.addEventListener('input', updatePrice);
        oInp.addEventListener('input', updatePrice);

        // Form Submit
        document.getElementById('mainProductForm').onsubmit = async (e) => {
            e.preventDefault();
            
            const imgCount = Object.keys(croppedBlobs).length;
            if (imgCount < 2 && imgCount > 4) {
                return Swal.fire({ icon: 'error', title: '2 to 4 Images Required', text: 'Please upload 2 to 4 angles.', background: '#141414', color: '#fff' });
            }

            const stocks = Array.from(document.querySelectorAll('.size-stock-input'));
            const totalStock = stocks.reduce((acc, el) => acc + (parseInt(el.value) || 0), 0);

            const formData = new FormData(e.target);
            
            Object.keys(croppedBlobs)
                .sort((a, b) => a - b)
                .forEach(key => {
                    formData.append('productImages', croppedBlobs[key], `img-${key}.jpg`);
                });

            const sizesJson = stocks.map(s => ({ size: s.dataset.size, stock: s.value }));
            formData.append('sizes', JSON.stringify(sizesJson));

            try {
                Swal.fire({ title: 'Publishing Product...', didOpen: () => Swal.showLoading(), background: '#141414', color: '#fff' });
                const res = await fetch('/admin/products/add', { method: 'POST', body: formData });
                const data = await res.json();

                if (!res.ok){
                    throw new Error(data.message || 'Failed to save product');
                }
                await Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: data.message || 'Product added successfully',
                    background: '#141414',
                    color: '#fff'
                });

                window.location.href = '/admin/products'; 

            } catch (err) {
                Swal.fire({ icon: 'error', title: 'Error', text: err.message, background: '#141414', color: '#fff' });
            }
        };
    </script>
</body>
</html>