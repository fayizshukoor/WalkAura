<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WalkAura</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        body { background-color: #000; color: #fff; font-family: sans-serif; overflow-x: hidden; }
        .material-symbols-outlined { font-variation-settings: 'FILL' 0, 'wght' 300, 'GRAD' 0, 'opsz' 24; }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: #000; }
        ::-webkit-scrollbar-thumb { background: #333; border-radius: 10px; }

        /* Nav Active Styles */
        .nav-item.active { background-color: #111; color: #fff; }
        .nav-item.active .material-symbols-outlined { color: #5c56f6; font-variation-settings: 'FILL' 1; }
    </style>
</head>
<body class="antialiased">

    <div class="flex min-h-screen w-full">
        

         <%- include('.././partials/adminsidebar') %>

        <main class="flex-1 p-6 md:p-10 w-full">
            <div class="max-w-7xl mx-auto">
                <div class="flex justify-between items-center mb-8">
                    <h1 class="text-2xl font-bold">Dashboard</h1>
                    <button class="flex items-center gap-2 bg-[#111] border border-gray-800 px-4 py-2 rounded-lg text-sm text-gray-400 hover:border-gray-600 transition-colors">
                        <span class="material-symbols-outlined text-sm">calendar_month</span> Last 30 Days
                    </button>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <div class="bg-[#111] p-6 rounded-2xl border border-gray-800">
                        <p class="text-gray-500 text-xs font-semibold uppercase mb-2">Total Revenue</p>
                        <h2 class="text-2xl font-bold">â‚¹125,930</h2>
                        <p class="text-green-500 text-xs mt-1">+5.2% from last month</p>
                    </div>
                    <div class="bg-[#111] p-6 rounded-2xl border border-gray-800">
                        <p class="text-gray-500 text-xs font-semibold uppercase mb-2">Total Sales</p>
                        <h2 class="text-2xl font-bold">4,120 Pairs</h2>
                        <p class="text-green-500 text-xs mt-1">+2.1% from last month</p>
                    </div>
                    <div class="bg-[#111] p-6 rounded-2xl border border-gray-800">
                        <p class="text-gray-500 text-xs font-semibold uppercase mb-2">New Customers</p>
                        <h2 class="text-2xl font-bold">356</h2>
                        <p class="text-green-500 text-xs mt-1">+10.5% from last month</p>
                    </div>
                    <div class="bg-[#111] p-6 rounded-2xl border border-gray-800">
                        <p class="text-gray-500 text-xs font-semibold uppercase mb-2">Total Orders</p>
                        <h2 class="text-2xl font-bold">1,890</h2>
                        <p class="text-green-500 text-xs mt-1">+3.8% from last month</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <div class="lg:col-span-2 bg-[#111] p-6 rounded-2xl border border-gray-800">
                        <h3 class="font-bold mb-6">Sales Over Time</h3>
                        <div class="relative h-[300px] w-full">
                            <canvas id="salesChart"></canvas>
                        </div>
                    </div>
                    <div class="bg-[#111] p-6 rounded-2xl border border-gray-800 flex flex-col items-center">
                        <h3 class="font-bold mb-6 self-start">Order Status</h3>
                        <div class="relative h-[220px] w-full">
                            <canvas id="statusChart"></canvas>
                        </div>
                        <div class="flex justify-center gap-4 mt-8 text-[10px] text-gray-500">
                            <span class="flex items-center gap-1"><div class="w-2 h-2 rounded-full bg-[#5c56f6]"></div> Shipped</span>
                            <span class="flex items-center gap-1"><div class="w-2 h-2 rounded-full bg-[#10b981]"></div> Delivered</span>
                            <span class="flex items-center gap-1"><div class="w-2 h-2 rounded-full bg-[#f59e0b]"></div> Processing</span>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // --- Sidebar Active Logic ---
        (function() {
            const currentPath = window.location.pathname;
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => {
                const itemPath = item.getAttribute('href');
                if (currentPath === itemPath || (itemPath !== '#' && itemPath !== '/admin/dashboard' && currentPath.startsWith(itemPath))) {
                    item.classList.add('active');
                }
            });
        })();

        // --- Charts Initialization ---
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5'],
                datasets: [{
                    data: [1200, 1800, 1500, 2200, 1890],
                    borderColor: '#5c56f6',
                    backgroundColor: 'rgba(92, 86, 246, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointRadius: 4,
                    pointBackgroundColor: '#5c56f6'
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { 
                    x: { grid: { display: false }, ticks: { color: '#444' } }, 
                    y: { grid: { color: '#222' }, ticks: { color: '#444' } } 
                }
            }
        });

        const statusCtx = document.getElementById('statusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                datasets: [{
                    data: [45, 30, 25],
                    backgroundColor: ['#5c56f6', '#10b981', '#f59e0b'],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                maintainAspectRatio: false,
                cutout: '80%',
                plugins: { legend: { display: false } }
            }
        });
    </script>
</body>
</html>