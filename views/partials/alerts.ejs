<% if (typeof success !== "undefined" && success.length > 0 ) { %>
  <div
    id="successBox"
    class="alert-box mb-4 text-sm text-green-400 bg-green-500/10 
           border border-green-500/20 rounded-lg px-4 py-3 transition-opacity duration-500">
    <%= success %>
  </div>
<% } %>

<% if (typeof error !== "undefined" && error.length > 0) { %>
  <div
    id="errorBox"
    class="alert-box mb-4 text-sm text-red-400 bg-red-500/10 
           border border-red-500/20 rounded-lg px-4 py-3 transition-opacity duration-500">
    <%= Array.isArray(error) ? error[0] : error %>
  </div>
<% } %>

<script>
  // Select all elements with the 'alert-box' class
  const alerts = document.querySelectorAll('.alert-box');

  alerts.forEach(alert => {
    // Start fading out after 4.5 seconds
    setTimeout(() => {
      alert.style.opacity = '0';
      
      // Physically remove from DOM after the fade animation finishes (0.5s)
      setTimeout(() => alert.remove(), 500);
    }, 4500);
  });
</script>