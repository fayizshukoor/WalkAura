<div
  id="adminLogoutModal"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black/70"
>
  <div
    class="w-full max-w-sm rounded-xl bg-[#0b0c10] border border-red-500/30 shadow-xl p-6 text-center"
  >
    <h2 class="text-xl font-semibold text-white mb-2">
      Admin Logout
    </h2>

    <p class="text-gray-400 mb-6">
      Are you sure you want to log out of the admin panel?
    </p>

    <div class="flex justify-center gap-4">
      <button
        id="cancelAdminLogout"
        class="px-4 py-2 rounded-lg bg-gray-700 text-white hover:bg-gray-600 transition"
      >
        Cancel
      </button>

      <a
        href="/admin/logout"
        class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-500 transition"
      >
        Logout
      </a>
    </div>
  </div>
</div>

<script>
  const adminModal = document.getElementById("adminLogoutModal");
  const cancelAdminBtn = document.getElementById("cancelAdminLogout");

  document.addEventListener("click", (e) => {
    const adminLogoutBtn = e.target.closest("[data-admin-logout-btn]");

    if (adminLogoutBtn) {
      e.preventDefault();
      adminModal.classList.remove("hidden");
      adminModal.classList.add("flex");
    }

    if (e.target === adminModal || e.target === cancelAdminBtn) {
      adminModal.classList.add("hidden");
      adminModal.classList.remove("flex");
    }
  });
</script>
